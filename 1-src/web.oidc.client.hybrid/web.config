<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="."
            inheritInChildApplications="false"
            allowOverride="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore"
             path="*"
             verb="*"
             modules="AspNetCoreModuleV2"
             resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet"
                  arguments="run"
                  hostingModel="outofprocess"
                  stdoutLogEnabled="true"
                  shutdownTimeLimit="2"
                  stdoutLogFile=".\" />
    </system.webServer>
  </location>
</configuration>
